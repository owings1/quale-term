{
    "compilerOptions": {
        "declaration": true,
        "target": "ES2020",
        "module": "es2020",
        "outDir": "dist",
        "rootDir": "src",
        "allowJs": true,
        "moduleResolution": "node",
        "types": [
            "node",
            "mocha"
        ],
        "lib": [
            "es6"
        ],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "<node_internals>/**"
    ]
}
