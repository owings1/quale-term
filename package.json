{
  "name": "@quale/term",
  "version": "1.1.1",
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "terminal, colors, drawing, ansi, logging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./logger.js": "./src/classes/logger.js",
    "./merging.js": "./src/merging.js",
    "./colors.js": "./src/colors.js"
  },
  "type": "module",
  "scripts": {
    "compile": "tsc",
    "test": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' mocha",
    "clean": "npm run cl && rm -rf node_modules",
    "prepublish": "tsc",
    "preversion": "npm run clean && npm i && npm t",
    "version": "echo no version script to run",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owings1/quale-term.git"
  },
  "keywords": [
    "ansi",
    "chalk",
    "logging",
    "terminal"
  ],
  "author": "Doug Owings <doug@dougowings.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/owings1/quale-term/issues"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "NOTICE.md",
    "README.md"
  ],
  "homepage": "https://github.com/owings1/quale-term#readme",
  "dependencies": {
    "@quale/core": "^1.2.0",
    "chalk": "^5.0.1",
    "chalk-pipe": "^5.1.1",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.2",
    "chai": "^4.3.4",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  }
}
